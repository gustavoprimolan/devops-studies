FROM php:8-apache

WORKDIR /var/www/html/

COPY . .

EXPOSE 80

# DAR A PERMISSÃO PARA TODOS OS ARQUIVOS PARA QUEM VAI EXECUTAR
# DOCKER PRIMEIRAMENTE VAI DEIXAR AS PERMISSOES COM O USUÁRIO DELE
# ISSO NAO FUNCIONA COM O APACHA, POR ISSO É NECESSÁRIO DAR ESSA PERMISSAO
# PERMISSAO PARA O USUÁRIO www-data NO GRUPO www-data EM TODOS OS ARQUIVOS DO /var/www
RUN chown -R www-data:www-data /var/www
